<!DOCTYPE html>
<html>
	<%- include('./blocks/header') %>
	<body>
		<div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 rounded-3 my-5" style="box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.75); top: 20%;">
            <div class="card-body p-4 p-sm-5">
              <h5 class="card-title text-center mb-5 fw-light fs-5">Sign In</h5>
              <form action="/api/user/login" method="POST">
                <div class="form-floating mb-3">
                  <label for="floatingInput">Email address</label>
                  <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                </div>
                <div class="form-floating mb-3">
                  <label for="floatingPassword">Password</label>
                  <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                </div>
                  <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" id="rememberPasswordCheck">
                  <label class="form-check-label" name="remember_me" for="rememberPasswordCheck">Remember Me</label>
                </div>
                <p style="text-align:left;">
                  <a href="/register">Create account</a>
                  <span style="float:right;">
                    <button class="btn btn-primary text-uppercase fw-bold" type="submit">Login</button>
                  </span>
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
	</body>
</html>
